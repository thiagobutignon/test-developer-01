{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src", "tests"],
    "exclude": []
}